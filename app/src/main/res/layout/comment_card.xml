<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relativeLayout">
                <com.reptile.nomad.changedReptile.CircularNetworkImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/commenterProfileImageView"
                    android:src="@drawable/ic_face_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="13sp"
                    android:id="@+id/commentNameTextView"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/createdTimeComment"
                    android:layout_alignStart="@+id/createdTimeComment" />

                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="created time"
                    android:textSize="9sp"
                    android:paddingTop="2dp"
                    android:id="@+id/createdTimeComment"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/commenterProfileImageView"
                    android:layout_toEndOf="@+id/commenterProfileImageView"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Requesting server ..."
                android:textSize="12sp"
                android:id="@+id/commentTextView"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>