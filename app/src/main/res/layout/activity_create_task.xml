<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="@color/white"
    tools:mActivity="com.reptile.nomad.ReptileApp.CreateTaskActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/enhancedToolbar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/createTaskToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a task"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>

</FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/enhancedToolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"

                    android:layout_marginTop="10dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <EditText
                                    android:layout_marginTop="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:hint="Your task goes here."
                                    android:textColor="#888"
                                    android:ems="10"
                                    android:id="@+id/createTaskStringEditText"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />



                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/input_layout_name">


                        </android.support.design.widget.TextInputLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingTop="15dp"
                    android:layout_height="174dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remind me in"
                            android:id="@+id/createTaskDeadlineTitleTextView"
                            android:textSize="15dp"
                            android:layout_centerHorizontal="true"

                            />
                        <info.hoang8f.android.segmented.SegmentedGroup
                            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/taskDeadlineRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="2dp"
                            segmentedgroup:sc_corner_radius="10dp"
                            segmentedgroup:sc_tint_color="@color/colorAccent"
                            segmentedgroup:sc_checked_text_color="@color/white"
                            android:layout_below="@+id/createTaskDeadlineTitleTextView"
                            android:layout_centerHorizontal="true"
                            >

                                <RadioButton
                                    android:id="@+id/fiveMinutes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 mins"
                                    style="@style/RadioButton" />

                                <RadioButton
                                    android:id="@+id/fifteenMinutes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15 mins"
                                    style="@style/RadioButton" />
                                <RadioButton
                                    android:id="@+id/fortyfiveMinutes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45 mins"
                                    style="@style/RadioButton" />
                                <RadioButton
                                    android:id="@+id/twoHours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 Hours"
                                    style="@style/RadioButton" />
                                <RadioButton
                                    android:id="@+id/oneDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 Day"
                                    style="@style/RadioButton" />
                        </info.hoang8f.android.segmented.SegmentedGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:clickable="true"
                            android:paddingLeft="60dp"
                            android:text="Wed 18 May 2016"
                            android:id="@+id/createTaskDeadlineDateTextView"
                            android:layout_alignTop="@+id/createTaskDeadlineTimeTextView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:clickable="true"
                            android:paddingRight="60dp"
                            android:text="9:11 PM"
                            android:id="@+id/createTaskDeadlineTimeTextView"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="34dp" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Or pick a deadline"
                            android:id="@+id/textView"
                            android:layout_below="@+id/taskDeadlineRadioGroup"
                            android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:layout_weight="6">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp">

                                        <RadioGroup
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="3"
                                            android:orientation="horizontal">

                                                <RadioButton
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Public"
                                                    android:textColor="@color/reptile_green"
                                                    android:layout_weight="1"
                                                    android:id="@+id/publicRadioButton" />


                                                <RadioButton
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Private"
                                                    android:layout_weight="1"
                                                    android:id="@+id/customRadioButton" />

                                        </RadioGroup>


                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Public Posts are shared with people with similar interests Or working on similar stuff right now !"
                                    android:id="@+id/textView2"
                                    android:layout_margin="15dp"
                                    android:textSize="12dp"
                                    />

                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true">
                                <ImageButton
                                    android:layout_width="290dp"
                                    android:layout_height="60dp"
                                    android:text="Create"
                                    android:background="@drawable/roundedcorners"
                                    android:id="@+id/createTaskButton"


                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Create"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:textSize="24sp"/>
                        </FrameLayout>
                </RelativeLayout>








        </LinearLayout>


</RelativeLayout>
